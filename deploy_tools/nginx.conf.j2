server {
    listen 80;
    server_name {{ inventory_hostname }};

    location / {
        proxy_set_header Host $host;
        proxy_pass http://unix:/tmp/web-audio.sock;
    }

    location /ws {
        proxy_set_header Host $host;
        proxy_pass http://unix:/tmp/web-audio.sock;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    location /static {
        alias /home/{{ ansible_ssh_user }}/sites/{{ inventory_hostname }}/source/static;
    }
}
